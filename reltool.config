{sys, [
 {lib_dirs, ["../","../deps"]},
 {erts, [{mod_cond, derived},
         {app_file, strip}]},
 {rel, "skyFS-zab0", "1",[kernel,
 							  stdlib,
 							  inets,
 							  sasl,
 							  crypto,
 							  ssl,
 							  xmerl,
 							  zab,
 							  ce,
 							  appmon,
 							  os_mon,
 							  compiler,
 							  gs,
 							  public_key,
 							  mnesia
 							  ]},
 {boot_rel, "skyFS-zab0"},
 {relocatable, true},
 {profile, embedded}, 
 {excl_archive_filters, [".*"]},
 {incl_cond, exclude}, 
 {app, kernel, [{incl_cond, include}]},
 {app, stdlib, [{incl_cond, include}]},
 {app, sasl, [{incl_cond, include}]},
 {app, inets, [{incl_cond, include}]},
 {app, appmon, [{incl_cond, include}]},
 {app, crypto, [{incl_cond, include}]},
 {app, ssl, [{incl_cond, include}]},
 {app, public_key, [{incl_cond, include}]},
 {app, xmerl, [{incl_cond, include}]},
 {app, compiler, [{incl_cond, include}]},
 {app, os_mon, [{incl_cond, include}]},
 {app, gs, [{incl_cond, include}]},
 {app, mnesia, [{incl_cond, include}]},
 {app, syntax_tools, [{incl_cond, include}]},
 {app, ce, [{incl_cond,include},  
                   {incl_app_filters,["^ebin/","^priv/","^sys.config"]}]},
  {app, zab, [{incl_cond, include}]}

]}.

{target_dir, "skyFS-zab0"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "files/skyFS-zab0", "bin/skyFS-zab0"},
           {copy, "files/app.config", "etc/app.config"},
           {copy, "files/vm.args", "etc/vm.args"}
          ]}.
